<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.quiz.futbol">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.StadiumApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_id"/>

        <activity android:name=".ui.login.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan"
            android:configChanges="orientation"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.select.SelectActivity"
            android:noHistory="true" />

        <activity android:name=".ui.profile.ProfileActivity"  />
        <activity android:name=".ui.follows.FollowsActivity"  />

        <activity android:name=".ui.profileEdit.ProfileEditActivity" />

        <activity
            android:name=".ui.game.GameActivity"
            android:noHistory="true"/>

        <activity
            android:name=".ui.result.ResultActivity"/>
    </application>

</manifest>