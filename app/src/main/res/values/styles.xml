<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
        <item name="android:buttonStyle">@style/FutbolButton</item>
    </style>

    <style name="SelectGameButton" parent="Bold.TextColor.Medium" >
        <item name="android:background">@drawable/selector_with_radius_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>


    <style name="FutbolButton" parent="Bold.TextColor.Medium" >
        <item name="android:background">@drawable/selector_with_radius_button</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Animation for Dialog component -->
    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="BioTextInputLayout">
        <item name="android:textColorPrimary">@color/textColorDark</item>
        <item name="colorControlNormal">@color/textColorLight</item>
        <item name="android:textColorHint">@color/textColorLight</item>
        <item name="colorControlActivated">@color/textColorLight</item>
        <item name="android:colorControlActivated">@color/textColorLight</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>